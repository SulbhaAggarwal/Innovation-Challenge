<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

  <div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
      <h2>CAMT</h2>
      <ul>
        <li><a href="/">Home/Dashboard</a></li>
        <li><a href="/application" class="active">Applications</a></li>
        <li><a href="/service">Service Ids</a></li>
        <li><a href="/">Reports</a></li>
        <li><a href="/">Settings</a></li>
        <li><a href="/">Logout</a></li>
      </ul>
    </div>

  <!-- Main Content -->
  <div class="content">
    <h2 style="display: flex; justify-content: space-between; align-items: center;">
        Applications
        <button id="refresh-button">ðŸ”„ Refresh</button>
    </h2>
      <table id="applications-table">
          <thead>
              <tr>
                  <th>Application</th>
                  <th>Description</th>
                  <th>Status</th>
                  <th>Internal</th>
                  <th>Manager</th>
              </tr>
          </thead>
          <tbody>
              <% applications.forEach(app => { %>
              <tr>
                  <td><%= app.application %></td>
                  <td><%= app.description %></td>
                  <td><%= app.status %></td>
                  <td><%= app.internal %></td>
                  <td><a href="mailto:<%= app.manager %>"><%= app.manager %></a></td>
              </tr>
              <% }) %>
          </tbody>
      </table>
    </div>


  </body>
  </html>